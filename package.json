{
  "name": "gerador-mega-virada",
  "version": "1.0.0",
  "description": "Gerador de Apostas para Mega da Virada",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "keywords": [
    "mega-virada",
    "lottery",
    "combinations",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.gerador.megavirada",
    "productName": "Gerador Mega da Virada",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/gerador_mega.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/gerador_mega.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/gerador_mega.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}